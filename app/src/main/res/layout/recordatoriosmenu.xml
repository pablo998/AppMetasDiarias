<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Rojo"
    android:foregroundTint="#303233"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/blurryImage"
        android:layout_width="705dp"
        android:layout_height="715dp"
        android:alpha="0.2"
        android:contentDescription="@string/blurryImageDescripcion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraArriba"
        app:srcCompat="@drawable/applogo" />

    <Button
        android:id="@+id/transparentBtn1Recordatorio"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        android:background="@color/Transparente"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/opcion1RecordatoriosVerBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraArriba"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/transparentBtn2Recordatorio"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="132dp"
        android:background="@color/Transparente"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/barraAbajo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opcion2RecordatoriosAddBtn" />

    <Button
        android:id="@+id/opcion1RecordatoriosVerBtn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:alpha="0.9"
        android:background="@color/Amarillo"
        android:onClick="onClickVerListaOpcion"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/Blanco"
        app:layout_constraintBottom_toTopOf="@+id/opcion2RecordatoriosAddBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transparentBtn1Recordatorio" />

    <TextView
        android:id="@+id/opcion1RecordatoriosTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/primeraOpcionRecordatorios"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/Blanco"
        android:textSize="20sp"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/opcion1RecordatoriosVerBtn"
        app:layout_constraintStart_toEndOf="@+id/verListaImagen"
        app:layout_constraintTop_toTopOf="@+id/opcion1RecordatoriosVerBtn" />

    <ImageView
        android:id="@+id/verListaImagen"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="311dp"
        android:contentDescription="@string/verListaDescription"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/opcion1RecordatoriosVerBtn"
        app:layout_constraintEnd_toEndOf="@+id/opcion1RecordatoriosVerBtn"
        app:layout_constraintStart_toStartOf="@+id/opcion1RecordatoriosVerBtn"
        app:layout_constraintTop_toTopOf="@+id/opcion1RecordatoriosVerBtn"
        app:srcCompat="@drawable/verlista" />

    <Button
        android:id="@+id/opcion2RecordatoriosAddBtn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:alpha="0.7"
        android:background="@color/Amarillo"
        android:onClick="onAÃ±adirRecordatorio"
        app:layout_constraintBottom_toTopOf="@+id/transparentBtn2Recordatorio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opcion1RecordatoriosVerBtn" />

    <TextView
        android:id="@+id/opcion2RecordatoriosTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="@string/segundaOpcionRecordatorios"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/Blanco"
        android:textSize="20sp"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/opcion2RecordatoriosAddBtn"
        app:layout_constraintStart_toEndOf="@+id/addRecordatorioImagen"
        app:layout_constraintTop_toTopOf="@+id/opcion2RecordatoriosAddBtn" />

    <ImageView
        android:id="@+id/addRecordatorioImagen"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="311dp"
        android:contentDescription="@string/addRecordatorioDescription"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/opcion2RecordatoriosAddBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/opcion2RecordatoriosAddBtn"
        app:srcCompat="@drawable/addrecordatorio" />

    <Button
        android:id="@+id/barraArriba"
        android:layout_width="412dp"
        android:layout_height="55dp"
        android:background="@color/Negro"
        android:clickable="false"
        android:translationZ="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="410dp"
        android:layout_height="55dp"
        android:clickable="false"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="@+id/barraArriba"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tituloScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="10dp"
            android:text="@string/recordatoriosPalabra"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/Blanco"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/logoDescripcion"
            android:translationZ="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/applogo" />

        <Button
            android:id="@+id/botonLogo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:alpha="0.2"
            android:background="@drawable/roundedbutton"
            android:onClick="onClickAppLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <Button
        android:id="@+id/barraAbajo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/Negro"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:clickable="false"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/barraArriba"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" >

        <ImageView
            android:id="@+id/userNameLogo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/userLogoDescription"
            app:srcCompat="@drawable/userlogo2" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/userNameLogo"
            android:text="@string/userName"
            android:textColor="@color/Blanco"
            android:translationZ="10dp" />

        <TextView
            android:id="@+id/nivelPalabra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:layout_toStartOf="@+id/nivelEstrella"
            android:text="@string/nivelPalabra"
            android:textColor="@color/Blanco" />

        <TextView
            android:id="@+id/nivelNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_above="@+id/nivelEstrella"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="11dp"
            android:text="@string/userLevel"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/Blanco"
            android:translationZ="10dp" />

        <ImageView
            android:id="@+id/nivelEstrella"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="@string/nivelEstrellaDescription"
            app:srcCompat="@drawable/estrella" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>